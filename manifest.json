  {
    "manifest_version": 3,
    "name": "Typing Area Extension",
    "version": "1.0",
    "description": "Adds a typing area at the bottom of the page.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }
  